/**
 * Implements hook_preprocess_HOOK() for html.html.twig.
 */
function loti_preprocess_html(&$variables) {

    // SEO Information
    $http_equiv = [
        '#type' => 'html_tag',
        '#tag' => 'meta',
        '#attributes' => [
        'http-equiv' => 'x-ua-compatible',
        'content' => 'ie=edge',
        ],
    ];
    $variables['page']['#attached']['html_head'][] = [$http_equiv, 'http-equiv'];
}

