}


function loti_page_attachments_alter(&$page) {
    $viewport = [
      '#type' => 'html_tag',
      '#tag' => 'meta',
      '#attributes' => [
        'name' => 'viewport',
        'content' => 'width=device-width, initial-scale=1, shrink-to-fit=no',
      ],
    ];
    $page['#attached']['html_head'][] = [$viewport, 'viewport'];
}


